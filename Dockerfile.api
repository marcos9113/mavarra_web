# syntax=docker/dockerfile:1

FROM node:20-bookworm-slim AS runtime
WORKDIR /app
ENV NODE_ENV=production

# Install production dependencies only
COPY package.json package-lock.json ./
RUN npm ci --omit=dev

# Copy API/runtime code
COPY server.mjs ./server.mjs
COPY api ./api

# Prepare writable config directory (mount secrets at runtime)
RUN mkdir -p config && chown -R node:node /app

USER node
EXPOSE 3001
CMD ["node", "server.mjs"]
